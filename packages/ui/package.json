{
  "name": "tafiui",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "pnpm build:layout",
    "build:layout": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "concurrently \"tsc -w --project tsconfig.build.json\" \"tsc-alias -w -p tsconfig.build.json\"",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    "./style.css": "./dist/style.css",
    "./image-zoom.css": "./dist/image-zoom.css",
    "./tailwind-plugin": {
      "import": "./dist/tailwind-plugin.js",
      "types": "./dist/tailwind-plugin.d.ts",
      "default": "./dist/tailwind-plugin.js"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./i18n": {
      "import": "./dist/i18n.js",
      "types": "./dist/i18n.d.ts"
    },
    "./layouts/*": {
      "import": "./dist/layouts/*.js",
      "types": "./dist/layouts/*.d.ts"
    },
    "./page": {
      "import": "./dist/page.js",
      "types": "./dist/page.d.ts"
    },
    "./provider": {
      "import": "./dist/provider.js",
      "types": "./dist/provider.d.ts"
    },
    "./mdx": {
      "import": "./dist/mdx.js",
      "types": "./dist/mdx.d.ts"
    },
    "./og": {
      "import": "./dist/og.js",
      "types": "./dist/og.d.ts"
    }
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-direction": "^1.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.3",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "@tafiui/core": "0.0.2",
    "lodash.merge": "^4.6.2",
    "lucide-react": "^0.469.0",
    "next-themes": "^0.4.4",
    "postcss-selector-parser": "^7.0.0",
    "react-medium-image-zoom": "^5.2.13",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.1.4",
    "@tafiui/eslint-config": "workspace:*",
    "@tafiui/ts-config": "workspace:*",
    "@types/lodash.merge": "^4.6.9",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "next": "15.1.4",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17",
    "tsc-alias": "^1.8.10"
  },
  "peerDependencies": {
    "next": "14.x.x || 15.x.x",
    "react": "18.x.x || 19.x.x",
    "react-dom": "18.x.x || 19.x.x",
    "tailwindcss": "^3.4.14"
  },
  "publishConfig": {
    "access": "public"
  }
}
